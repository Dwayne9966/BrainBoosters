<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dwayne.brainboosters.MainActivity3Activity"
    android:background="#FFFF30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show me seven"
        android:textSize="42sp"
        android:id="@+id/Show_me_seven"
        android:textColor="#000000"
        android:layout_above="@+id/view5"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="194sp"
        android:textColor="#000000"
        android:background="#FFFF30"
        android:onClick="result"
        android:id="@+id/button"
        android:layout_marginTop="128dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton2" />

    <View
        android:layout_width="1dp"
        android:layout_height="250dp"
        android:rotation="90"
        android:background="@android:color/darker_gray"
        android:color="#000000"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:id="@+id/view5" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:rotation="90"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="194sp"
        android:textColor="#000000"
        android:onClick="wrongchoice"
        android:id="@+id/button2"
        android:layout_above="@+id/view"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#FFFF30"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audioxl"
        android:onClick="volts1"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFF30"/>



</RelativeLayout>
